    <div class="jumbotron text-center bg-warning">
      <i class="fas fa-hamburger"></i>
      <h1 class="display-4">Eat-Da-Burger!</h1>
    </div>
    <div class="container">
      <div class="row">
        <!-- Ready burgers -->
        <div class="col-sm-6">
          <ul>
            {{#each burgers}} {{#unless devoured}}
            <div>{{id}}. {{burger_name}}</div>

            <button
              type="submit"
              data-id="{{id}}"
              class="btn btn-light devoured"
            >
              DEVOUR IT!
            </button>

            <hr />
            {{/unless}} {{/each}}
          </ul>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
          <ul>
            {{#each burgers}} {{#if devoured}}
            <div>{{id}}. {{burger_name}}</div>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
      <!-- form -->

      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <form class="text-center" action="/burgers" method="POST">
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                id="name"
                name="burger_name"
              />
              <div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
              <div>
                <label
                  >Enter a burger you want to eat. Click the "Submit"
                  button.</label
                >
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>